<!-- Restart and Reset -->
<category>
    <pattern>RESTART</pattern>
    <template>
        <oob><set name="assessment_stage"></set></oob>
        <oob><set name="primary_interest"></set></oob>
        <oob><set name="programming_level"></set></oob>
        <oob><set name="math_comfort"></set></oob>
        <oob><set name="security_motivation"></set></oob>
        <oob><set name="web_preference"></set></oob>
        <oob><set name="systems_interest"></set></oob>
        
        Assessment reset! Let's start fresh.
        
        <srai>HELLO</srai>
    </template>
</category>

<category>
    <pattern>RESET</pattern>
    <template>
        <srai>RESTART</srai>
    </template>
</category>

</aiml>